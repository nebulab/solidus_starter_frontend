<%
  @taxons = @taxon && @taxon.parent ? @taxon.parent.children : Spree::Taxon.roots
  options = [[t('spree.all_departments'), '']] + @taxons.map {|t| [t.name, t.id]}
  selected = @taxon ? @taxon.id : params[:taxon]
%>

<%= form_tag spree.products_path, method: :get do %>
  <% cache [I18n.locale, @taxons] do %>
    <%= select_tag(:taxon, options_for_select(options, selected), 'aria-label' => 'Taxon') %>
  <% end %>
  <%= search_field_tag :keywords, params[:keywords], placeholder: t('spree.search') %>

  <%= render(Buttons::PrimaryComponent, type: :button) do %>
    <%= t('spree.search') %>
  <% end %>
<% end %>
